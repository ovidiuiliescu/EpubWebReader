{
  "name": "epub-web-reader",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "homepage": "https://ovidiu-ionescu.github.io/EpubWebReader",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:standalone": "vue-tsc && vite build --config vite.config.standalone.ts && npm run copy-standalone",
    "copy-standalone": "node scripts/copy-standalone.cjs",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "lint:fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@vueuse/core": "^10.9.0",
    "epubjs": "^0.3.93",
    "idb": "^8.0.0",
    "jszip": "^3.10.1",
    "pinia": "^2.1.7",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.22.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vue-tsc": "^2.0.6"
  }
}
